                    android:layout_width="80dp"
                    android:layout_height="26dp"
                    android:id="@+id/tsd3"
                    android:layout_below="@+id/deboleContro"
                    android:layout_toEndOf="@+id/tsd2"
                    android:src="@drawable/lotta"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="26dp"
                    android:id="@+id/tsd4"
