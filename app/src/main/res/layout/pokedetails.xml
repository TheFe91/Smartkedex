                    android:layout_width="80dp"
                    android:layout_height="26dp"
                    android:id="@+id/tsf1"
                    android:layout_below="@+id/forteContro"
                    android:src="@drawable/veleno"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="26dp"
                    android:id="@+id/tsf2"
                    android:layout_below="@+id/forteContro"
                    android:layout_toEndOf="@+id/tsf1"
                    android:src="@drawable/acciaio"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="26dp"
                    android:id="@+id/tsf3"
                    android:layout_below="@+id/forteContro"
                    android:layout_toEndOf="@+id/tsf2"
                    android:src="@drawable/fuoco"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="26dp"
                    android:id="@+id/tsf4"
                    android:layout_below="@+id/forteContro"
                    android:layout_toEndOf="@+id/tsf3"
                    android:src="@drawable/erba"/>
            <!--</TableRow>-->
            <!--<TableRow>-->
                <TextView
                    android:text="Debole contro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_below="@+id/tsf1"
                    android:id="@+id/deboleContro" />
            <!--</TableRow>-->
