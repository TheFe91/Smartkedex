                    android:layout_width="80dp"
                    android:layout_height="26dp"
                    android:id="@+id/tsd1"
                    android:layout_below="@+id/deboleContro"
                    android:src="@drawable/acqua"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="26dp"
                    android:id="@+id/tsd2"
                    android:layout_below="@+id/deboleContro"
                    android:layout_toEndOf="@+id/tsd1"
                    android:src="@drawable/psico"/>
